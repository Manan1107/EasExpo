@model IEnumerable<StallListItemViewModel>
@{
    ViewData["Title"] = "Browse stalls";
    var search = ViewData["Search"] as string ?? string.Empty;
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-3">
    <h1 class="h3 mb-3 mb-md-0">Browse stalls</h1>
    <div class="w-100 w-md-auto">
        <input type="search" class="form-control" id="stallSearch" placeholder="Search by name or location" value="@search" autocomplete="off" />
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No stalls available at the moment. Check back soon.</div>
}
else
{
    <div class="row" id="stallGrid">
    @foreach (var stall in Model)
    {
        var filterText = ($"{stall.Name} {stall.Location} {stall.Size} {stall.Status}").ToLowerInvariant();
        <div class="col-md-4 mb-4" data-stall="@filterText">
            <div class="card h-100 shadow-sm border-0 stall-card">
                <div class="card-body">
                    <h5 class="card-title">@stall.Name</h5>
                    <p class="card-text text-muted mb-1">@stall.Location</p>
                    @if (!string.IsNullOrWhiteSpace(stall.Size))
                    {
                        <p class="card-text text-muted small mb-1">Size: @stall.Size</p>
                    }
                    <p class="card-text mb-2">Rent: <strong>â‚¹@stall.RentPerDay.ToString("N0")</strong> / day</p>
                    <span class="badge badge-pill @(stall.Status == StallStatus.Available ? "badge-success" : stall.Status == StallStatus.Booked ? "badge-warning" : "badge-secondary")">
                        @stall.Status
                    </span>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-action="Details" asp-route-id="@stall.Id" class="btn btn-outline-primary btn-block">View details</a>
                </div>
            </div>
        </div>
    }
    </div>
    <div id="stallNoResults" class="alert alert-info d-none">No stalls match your search.</div>
}

@section Scripts {
    <script>
        (function () {
            const searchInput = document.getElementById('stallSearch');
            const cards = Array.from(document.querySelectorAll('[data-stall]'));
            const emptyState = document.getElementById('stallNoResults');

            if (!searchInput || cards.length === 0) {
                return;
            }

            const filter = () => {
                const term = searchInput.value.trim().toLowerCase();
                let visibleCount = 0;

                cards.forEach(card => {
                    const keywords = card.getAttribute('data-stall');
                    const isMatch = !term || (keywords && keywords.indexOf(term) !== -1);
                    card.classList.toggle('d-none', !isMatch);
                    if (isMatch) {
                        visibleCount++;
                    }
                });

                if (emptyState) {
                    emptyState.classList.toggle('d-none', visibleCount > 0);
                }
            };

            searchInput.addEventListener('input', filter);
            filter();
        })();
    </script>
}
