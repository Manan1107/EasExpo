@model StallDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-8">
        <h1 class="h3">@Model.Name</h1>
        <p class="text-muted">@Model.Location</p>
        <p class="lead">â‚¹@Model.RentPerDay.ToString("N2") per day</p>
        <p>@Model.Description</p>
        <dl class="row">
            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9">@Model.Size</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge badge-pill @(Model.Status == StallStatus.Available ? "badge-success" : Model.Status == StallStatus.Booked ? "badge-warning" : "badge-secondary")">
                    @Model.Status
                </span>
            </dd>
            <dt class="col-sm-3">Owner</dt>
            <dd class="col-sm-9">@Model.OwnerName</dd>
        </dl>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5>Ready to book?</h5>
                @if (Model.Status == StallStatus.Available)
                {
                    @if (ViewBag.CanBook)
                    {
                        <a asp-controller="Bookings" asp-action="Book" asp-route-stallId="@Model.Id" class="btn btn-primary btn-block">Book now</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-block">Sign in to book</a>
                    }
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        This stall is currently @Model.Status.ToString().ToLower().
                    </div>
                }
            </div>
        </div>
    </div>
</div>
