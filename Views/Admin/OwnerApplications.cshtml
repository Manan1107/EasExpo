@model IEnumerable<OwnerApplicationViewModel>
@{
    ViewData["Title"] = "Owner applications";
}

<h1 class="h3 mb-3">Stall owner applications</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no applications at the moment.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Applicant</th>
                    <th>Email</th>
                    <th>Company</th>
                    <th>Submitted</th>
                    <th>Status</th>
                    <th>Document</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td>@application.ApplicantName</td>
                    <td>@application.Email</td>
                    <td>@application.CompanyName</td>
                    <td>@application.SubmittedAt.ToLocalTime().ToString("dd MMM yyyy")</td>
                    <td>
                        <span class="badge badge-pill @(application.Status == ApplicationStatus.Approved ? "badge-success" : application.Status == ApplicationStatus.Pending ? "badge-warning" : "badge-danger")">
                            @application.Status
                        </span>
                    </td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(application.DocumentUrl))
                        {
                            <a href="@application.DocumentUrl" target="_blank">View</a>
                        }
                    </td>
                    <td class="text-right">
                        @if (application.Status == ApplicationStatus.Pending)
                        {
                            <form asp-action="ApproveApplication" asp-route-id="@application.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                            <form asp-action="RejectApplication" asp-route-id="@application.Id" method="post" class="d-inline ml-1">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                            </form>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
