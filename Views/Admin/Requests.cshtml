@model IEnumerable<EasExpo.Models.ViewModels.Admin.OwnerApplicationViewModel>
@{
    ViewData["Title"] = "Owner requests";
}

<h1 class="h3 mb-3">Pending stall owner requests</h1>

@if (!Model.Any())
{
    <div class="alert alert-success">All caught up! There are no pending stall owner requests.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Applicant</th>
                    <th>Email</th>
                    <th>Company</th>
                    <th>Submitted</th>
                    <th>Document</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.ApplicantName</td>
                    <td>@request.Email</td>
                    <td>@request.CompanyName</td>
                    <td>@request.SubmittedAt.ToLocalTime().ToString("dd MMM yyyy")</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(request.DocumentUrl))
                        {
                            <a href="@request.DocumentUrl" target="_blank" rel="noopener">Review</a>
                        }
                    </td>
                    <td class="text-right">
                        <form asp-action="ApproveApplication" asp-route-id="@request.Id" asp-route-returnUrl="@Url.Action("Requests", "Admin")" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form asp-action="RejectApplication" asp-route-id="@request.Id" asp-route-returnUrl="@Url.Action("Requests", "Admin")" method="post" class="d-inline ml-1">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
