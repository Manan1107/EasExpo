@model IEnumerable<AdminUserListItemViewModel>
@{
    ViewData["Title"] = "Manage users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Users</h1>
    <a class="btn btn-primary" asp-action="CreateUser">Add user</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th class="text-right">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                @if (user.IsActive)
                {
                    <span class="badge badge-success">Active</span>
                }
                else
                {
                    <span class="badge badge-secondary">Inactive</span>
                }
            </td>
            <td class="text-right">
                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this user?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
