@model OwnerStallFormViewModel
@{
    var isEdit = Model.Id.HasValue;
    ViewData["Title"] = isEdit ? "Edit stall" : "Add stall";
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<form asp-action="@(isEdit ? "EditStall" : "CreateStall")" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (isEdit)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Size"></label>
            <input asp-for="Size" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="RentPerDay"></label>
            <input asp-for="RentPerDay" class="form-control" />
            <span asp-validation-for="RentPerDay" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StallStatus>()"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="MyStalls" class="btn btn-link">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
