@model OwnerStallFormViewModel
@{
    var isEdit = Model.Id.HasValue;
    ViewData["Title"] = isEdit ? "Edit slot" : "Add slot";
    var eventName = ViewData["EventName"] as string;
    var eventLocation = ViewData["EventLocation"] as string;
    var eventDates = ViewData["EventDates"] as string;
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<form asp-action="@(isEdit ? "EditStall" : "CreateStall")" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (isEdit)
    {
        <input type="hidden" asp-for="Id" />
    }
    <input type="hidden" asp-for="EventId" />
    <div class="alert alert-light">
        <div class="font-weight-semibold mb-1">@(!string.IsNullOrWhiteSpace(eventName) ? eventName : "Event slot configuration")</div>
        @if (!string.IsNullOrWhiteSpace(eventLocation) || !string.IsNullOrWhiteSpace(eventDates))
        {
            <div class="small text-muted">@eventLocation@if (!string.IsNullOrWhiteSpace(eventLocation) && !string.IsNullOrWhiteSpace(eventDates)) {<text> â€¢ </text>}@eventDates</div>
        }
        <small class="text-muted">Slots inherit event details automatically. Adjust only when this slot requires overrides.</small>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="SlotNumber"></label>
            <input asp-for="SlotNumber" class="form-control" readonly />
            <span asp-validation-for="SlotNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-8">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Size"></label>
            <input asp-for="Size" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="RentPerDay"></label>
            <input asp-for="RentPerDay" class="form-control" />
            <span asp-validation-for="RentPerDay" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StallStatus>()"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="EventDetails" asp-route-id="@Model.EventId" class="btn btn-link">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
