@model EasExpo.Models.ViewModels.StallOwner.OwnerEventDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
    <div>
        <h1 class="h3 mb-1">@Model.Name</h1>
        <p class="text-muted mb-1">@Model.Location</p>
        <p class="mb-0">@Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</p>
    </div>
    <div class="text-md-right mt-3 mt-md-0">
        <div class="h5 mb-1">₹@Model.SlotPrice.ToString("N0") per stall</div>
        @if (!string.IsNullOrWhiteSpace(Model.StallSize))
        {
            <div class="text-muted">Stall size: @Model.StallSize</div>
        }
        <span class="badge badge-pill @(Model.AvailableSlots > 0 ? "badge-success" : "badge-secondary") mt-2">
            @Model.AvailableSlots/@Model.TotalSlots slots available
        </span>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-muted">Booked slots</h6>
                <div class="h4 mb-0">@Model.BookedSlots</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-muted">Pending payments</h6>
                <div class="h4 mb-0">@Model.PendingBookings</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-muted">Available slots</h6>
                <div class="h4 mb-0">@Model.AvailableSlots</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-muted">Total revenue</h6>
                <div class="h4 mb-0">₹@Model.TotalRevenue.ToString("N2")</div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Event description</h5>
            <p class="card-text mb-0">@Model.Description</p>
        </div>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Slots</h2>
    <a class="btn btn-sm btn-primary" asp-action="CreateStall" asp-route-eventId="@Model.EventId">Add slot</a>
</div>
@if (!Model.Slots.Any())
{
    <div class="alert alert-info">No slots have been generated for this event.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Price</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var slot in Model.Slots)
            {
                var isAvailable = slot.Status == EasExpo.Models.Enums.StallStatus.Available;
                <tr>
                    <td>@slot.SlotNumber</td>
                    <td>@slot.Name</td>
                    <td>
                        <span class="badge badge-pill @(isAvailable ? "badge-success" : "badge-secondary")">
                            @slot.Status
                        </span>
                    </td>
                    <td>₹@slot.RentPerDay.ToString("N0")</td>
                    <td class="text-right">
                        <a asp-action="EditStall" asp-route-id="@slot.StallId" class="btn btn-sm btn-outline-secondary mr-1">Edit</a>
                        <a asp-action="StallDetails" asp-route-id="@slot.StallId" class="btn btn-sm btn-outline-primary mr-1">View</a>
                        <form asp-action="DeleteStall" asp-route-id="@slot.StallId" method="post" class="d-inline" onsubmit="return confirm('Delete this slot? This cannot be undone.');">
                            <button type="submit" class="btn btn-sm btn-outline-danger" @(slot.HasBookings ? "disabled" : string.Empty) title="@(slot.HasBookings ? "Slots with bookings cannot be deleted" : "Delete slot")">Delete</button>
                        </form>
                        @if (slot.HasBookings)
                        {
                            <div class="small text-muted">Bookings attached</div>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<div class="mt-4">
    <a asp-action="MyEvents" class="btn btn-link">Back to my events</a>
</div>
