@using System
@using System.Linq
@using EasExpo.Models.Constants
@using EasExpo.Models
@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager

@functions {
    private bool IsActive(string controller, string action = null)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        if (!string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase))
        {
            return false;
        }

        if (action == null)
        {
            return true;
        }

        return string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase);
    }
}
@{
    ApplicationUser currentUser = null;
    string displayName = string.Empty;
    string avatarInitials = string.Empty;

    if (User.Identity.IsAuthenticated)
    {
        currentUser = await UserManager.GetUserAsync(User);
        displayName = !string.IsNullOrWhiteSpace(currentUser?.FullName)
            ? currentUser.FullName
            : User.Identity.Name;

        if (string.IsNullOrWhiteSpace(displayName))
        {
            displayName = "Account";
        }

        var parts = displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0)
        {
            avatarInitials = displayName.Substring(0, Math.Min(1, displayName.Length)).ToUpperInvariant();
        }
        else
        {
            avatarInitials = string.Join(string.Empty, parts.Select(p => p.Substring(0, 1))).ToUpperInvariant();
            if (avatarInitials.Length > 2)
            {
                avatarInitials = avatarInitials.Substring(0, 2);
            }
        }

        if (string.IsNullOrWhiteSpace(avatarInitials))
        {
            avatarInitials = "A";
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasExpo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EasExpo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="avatar-circle mr-2">@avatarInitials</span>
                                    <span class="d-none d-md-inline">@displayName</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdown">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile settings</a>
                                    <div class="dropdown-divider"></div>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                        <button type="submit" class="btn btn-link dropdown-item">Sign out</button>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Sign in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm btn-outline-primary ml-2" asp-controller="Account" asp-action="Register">Create account</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(IsActive("Home") ? "active" : string.Empty)" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole(RoleNames.StallOwner))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(IsActive("StallOwner", "MyStalls") ? "active" : string.Empty)" asp-controller="StallOwner" asp-action="MyStalls">My stalls</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(IsActive("Stalls") ? "active" : string.Empty)" asp-controller="Stalls" asp-action="Index">Stalls</a>
                            </li>
                        }
                        @if (User.IsInRole(RoleNames.Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark @(IsActive("Admin") ? "active" : string.Empty)" href="#" id="adminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <a class="dropdown-item @(IsActive("Admin", "Dashboard") ? "active" : string.Empty)" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                                    <a class="dropdown-item @(IsActive("Admin", "Users") ? "active" : string.Empty)" asp-controller="Admin" asp-action="Users">Users</a>
                                    <a class="dropdown-item @(IsActive("Admin", "Stalls") ? "active" : string.Empty)" asp-controller="Admin" asp-action="Stalls">Stalls</a>
                                    <a class="dropdown-item @(IsActive("Admin", "OwnerApplications") ? "active" : string.Empty)" asp-controller="Admin" asp-action="OwnerApplications">Owner applications</a>
                                    <a class="dropdown-item @(IsActive("Admin", "PaymentReports") ? "active" : string.Empty)" asp-controller="Admin" asp-action="PaymentReports">Payment reports</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole(RoleNames.StallOwner))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark @(IsActive("StallOwner") ? "active" : string.Empty)" href="#" id="ownerDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Stall owner
                                </a>
                                <div class="dropdown-menu" aria-labelledby="ownerDropdown">
                                    <a class="dropdown-item" asp-controller="StallOwner" asp-action="Dashboard">Dashboard</a>
                                    <a class="dropdown-item" asp-controller="StallOwner" asp-action="MyStalls">My stalls</a>
                                    <a class="dropdown-item" asp-controller="StallOwner" asp-action="Bookings">Bookings</a>
                                    <a class="dropdown-item" asp-controller="StallOwner" asp-action="Feedback">Feedback</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole(RoleNames.Customer) && !User.IsInRole(RoleNames.Admin) && !User.IsInRole(RoleNames.StallOwner))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(IsActive("Bookings", "MyBookings") ? "active" : string.Empty)" asp-controller="Bookings" asp-action="MyBookings">My bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(IsActive("Home", "Feedback") ? "active" : string.Empty)" asp-controller="Home" asp-action="Feedback">Feedback</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(IsActive("Home", "Support") ? "active" : string.Empty)" asp-controller="Home" asp-action="Support">Help &amp; support</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData.ContainsKey("Success"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData.ContainsKey("Error"))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EasExpo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
