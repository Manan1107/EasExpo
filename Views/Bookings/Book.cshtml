@model BookingCreateViewModel
@{
    ViewData["Title"] = "Book stall";
}

<h1 class="h3 mb-3">Book @Model.StallName</h1>
<p class="text-muted">Rent: â‚¹@Model.RentPerDay.ToString("N2") per day</p>

<form asp-action="Book" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="StallId" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit booking request</button>
    <a asp-controller="Stalls" asp-action="Details" asp-route-id="@Model.StallId" class="btn btn-link">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
