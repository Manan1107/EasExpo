@using EasExpo.Models.Constants
@{
    ViewData["Title"] = "EasExpo";
}

<section class="jumbotron text-center bg-white shadow-sm border rounded p-5">
    <h1 class="display-4">Manage stall rentals with confidence</h1>
    <p class="lead">EasExpo connects admins, stall owners, and customers in one streamlined platform for bookings, payments, and insights.</p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Stalls" asp-action="Index" class="btn btn-primary btn-lg mr-2">Browse stalls</a>
        @if (User.IsInRole(RoleNames.Customer))
        {
            <a asp-controller="Bookings" asp-action="MyBookings" class="btn btn-outline-primary btn-lg">My bookings</a>
        }
        else if (User.IsInRole(RoleNames.StallOwner))
        {
            <a asp-controller="StallOwner" asp-action="Dashboard" class="btn btn-outline-primary btn-lg">Owner dashboard</a>
        }
        else if (User.IsInRole(RoleNames.Admin))
        {
            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-primary btn-lg">Admin dashboard</a>
        }
    }
    else
    {
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg mr-2">Get started</a>
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Sign in</a>
    }
</section>

<section class="my-5">
    <h2 class="text-center mb-4">Built for every role</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Administrators</h5>
                    <ul class="list-unstyled">
                        <li>• Approve stall owners and manage users</li>
                        <li>• Maintain stall inventory and pricing</li>
                        <li>• Track payments and booking analytics</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Stall owners</h5>
                    <ul class="list-unstyled">
                        <li>• Showcase stall availability and details</li>
                        <li>• Approve or reject booking requests</li>
                        <li>• Learn from customer feedback</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Customers</h5>
                    <ul class="list-unstyled">
                        <li>• Explore stalls by location and rent</li>
                        <li>• Request bookings in a few clicks</li>
                        <li>• Pay securely and track history</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2>Why EasExpo?</h2>
            <p class="text-muted">We combine a responsive ASP.NET Core front-end with secure identity, data-rich dashboards, and integrated Razorpay payments so your team can focus on experiences, not spreadsheets.</p>
            <p class="text-muted">Collect stall rent instantly through Razorpay while owners approve bookings and admins monitor revenue in real time.</p>
        </div>
        <div class="col-md-6">
            <div class="border rounded p-4 shadow-sm bg-white">
                <h5 class="mb-3">Quick links</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-controller="Stalls" asp-action="Index">Browse stalls</a></li>
                    @if (User.IsInRole(RoleNames.Customer))
                    {
                        <li><a asp-controller="Bookings" asp-action="MyBookings">My bookings</a></li>
                    }
                    @if (User.IsInRole(RoleNames.StallOwner))
                    {
                        <li><a asp-controller="StallOwner" asp-action="Dashboard">Owner dashboard</a></li>
                    }
                    @if (User.IsInRole(RoleNames.Admin))
                    {
                        <li><a asp-controller="Admin" asp-action="Dashboard">Admin dashboard</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>
